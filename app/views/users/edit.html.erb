<div class="listeditPage">
  <div class="container">
    <%= form_with model: @user , url: { action: :update }, html: { class: 'listForm' }, local: true do |f| %>
      <% if @user.errors.any? %>
        <p class="text-danger">名前は1文字~20文字以内にしてください</p>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control listName", placeholder: "名前" %>
      <div class="text-center"><%= f.submit "編集する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>
